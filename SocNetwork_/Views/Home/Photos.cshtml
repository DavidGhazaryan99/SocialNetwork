@{
}
<style>

.img-grid-list {
    margin: -1px;
    list-style-type: none;
}
.img-grid-list {
    padding: 0;
}
.img-grid-list > li {
    float: left;
    padding: 10px;
}
.img-grid-list > li a {
    position: relative;
    overflow: hidden;
    padding-top: 75%;
    display: block;
}
.img-grid-list > li a img {
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    left: 0;
}
</style>
<div class="container text-center">
    <div class="row">
        <div class="col-sm-3 well">
            <div class="well">
                <p>
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">My Profile</a>
                </p>
                <img src="data:image/png;base64, @Model.ProfilePicture" class="img-circle" height="65" width="65" alt="Avatar">
                <p>
                    @Model.firstName @Model.lastName
                </p>
            </div>
            <div class="well">
                <p><a href="#">Interests</a></p>
                <p>
                    <span class="label label-default">News</span>
                    <span class="label label-success">Labels</span>
                    <span class="label label-info">Football</span>
                    <span class="label label-warning">Gaming</span>
                    <span class="label label-danger">Friends</span>
                </p>
            </div>
            <p><a asp-controller="Home" asp-action="Photos">Photos</a></p>
            <p><a href="#">Link</a></p>
            <p><a href="#">Link</a></p>
        </div>
        <div class="col-sm-7">
            <div class="row">
                <div class="col-sm-12">
                    <div ><b>Photos (@Model.UserPictures.Count)</b></div>
                    <ul class="img-grid-list">
                        @foreach (var item in @Model.UserPictures)
                        {
                            <li>
                                <img  src="data:image/png;base64, @item.Picture" class="img-portrait" style="width:150px;height:150px" >
                            </li>
                        }
                    </ul>
                </div>
            </div>
            </div>
        </div>
    </div>
